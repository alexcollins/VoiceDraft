{
  "name": "voicedraft",
  "version": "0.1.0",
  "description": "Native-first voice input composer with recording UI, confirm/cancel flow, and capture controls.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./styles.css": "./dist/react/voice-draft.css"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "typescript": "^5.8.0"
  },
  "scripts": {
    "clean": "node scripts/clean-dist.mjs",
    "build": "npm run clean && tsc -p tsconfig.build.json && node scripts/copy-styles.mjs",
    "prepack": "npm run build",
    "typecheck": "tsc --noEmit",
    "benchmark:stt": "node scripts/benchmark-stt.mjs"
  },
  "keywords": [
    "voice",
    "speech-to-text",
    "dictation",
    "asr",
    "stt",
    "react",
    "native",
    "microphone"
  ]
}
